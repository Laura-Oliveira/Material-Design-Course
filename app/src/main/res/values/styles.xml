<resources>
    <!-- Base application theme. -->
    <style name="Theme.Shrine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AppBar -->
    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>

        <!-- Color -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!-- Icons -->
        <item name="navigationIcon">@drawable/menu</item>

        <!-- Text -->
        <item name="title">@string/app_name</item>
    </style>

    <style name="AppBar" parent="Theme.Material3.Dark">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Icons -->
        <item name="android:navigationIcon">@drawable/menu</item>

        <!-- Position -->
<!--        <item name="android:layout_marginTop">35dp</item>-->
    </style>



</resources>
