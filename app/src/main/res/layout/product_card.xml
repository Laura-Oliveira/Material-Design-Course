<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardItem"
    style="@style/CardView.Dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true">

        <!-- CardView Box Global -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/card_view_box_global"
            style="@style/BoxCardView">

            <!-- Image -->
            <ImageView
                android:id="@+id/card_view_product_image"
                style="@style/ImageCardView" />

            <!-- Box Content -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/card_view_box_content"
                style="@style/BoxContent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/card_view_product_title"
                    style="@style/TitleCardView"
                    android:textAppearance="?attr/textAppearanceSubtitle2"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/card_view_product_price"
                    style="@style/DescriptionCardView"
                    android:textAppearance="?attr/textAppearanceBody2"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>