<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BoxForm -->
    <style name="BoxGlobal" parent="Theme.Material3.Dark">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- Color -->
        <item name="android:background">@color/background</item>
    </style>

    <!-- ScrollViewProducts -->
    <style name="ScrollViewProducts" parent="Theme.Material3.Dark">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> 625dp</item>

        <!-- Position -->
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">@dimen/product_grid_spacing</item>
        <item name="paddingEnd">@dimen/product_grid_spacing</item>

        <!-- Color -->
        <item name="android:background">@color/productGridBackgroundColor</item>

        <!-- Behavior -->
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- BoxCardView -->
    <style name="BoxCardView" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:orientation">vertical</item>

        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- ImageCardView -->
    <style name="ImageCardView" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/product_card_image_height</item>

        <!-- Color -->
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- BoxContent -->
    <style name="BoxContent" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Position -->
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- TitleCardView -->
    <style name="TitleCardView" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Text -->
        <item name="android:text">@string/product_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- DescriptionCardView -->
    <style name="DescriptionCardView" parent="Widget.MaterialComponents.CardView">
        <!-- Dimens -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Text -->
        <item name="android:text">@string/product_description</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>